<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:orientation="vertical"
    android:background="#E6E6FA"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="com.huynt75.AppRun.MainActivity_test_1">
<!--relative khong garity ma dung margin de canh-->
<View
    android:id="@+id/view_s1"
    android:background="#7CFC00"
    android:layout_width="match_parent"
    android:layout_height="200dp"/>
    <TextView
        android:id="@+id/txt_1"
        android:layout_below="@+id/view_s1"
        android:text="toi o day toi ko di dau "
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/txt_2"
        android:background="@drawable/bg_for_btn_sendmail"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/view_s1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9dp"
        android:layout_marginRight="5dp"
        android:textSize="8dp"
        android:text="Learn More" />
    <!--android:layout_toRightOf="@+id/txt_1"-->
    <TextView
        android:id="@+id/txt_3"
        android:layout_below="@+id/txt_1"
        android:text="toi o day 2 "
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_4"
        android:layout_below="@+id/txt_3"
        android:text="toi o day 3 "
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>